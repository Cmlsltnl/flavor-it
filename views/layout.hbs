<body>
  <div class="navbar navbar-expand-lg navbar-light bg-light" id="nav">
    <div>
      <a class="navbar-brand" href="/">FLAVOR IT</a>
    </div>

    <div class="searchRow">
      <form action="/search" method="get" class="input-group btn-group">
        <div class="btn-group btn-group-toggle" data-toggle="buttons">
          <label class="btn btn-outline-secondary active">
            <input type="radio" name="options" id="option1" autocomplete="off" value="recipe" checked> &#127859
          </label>
          <label class="btn btn-outline-secondary">
            <input type="radio" name="options" id="option2" autocomplete="off" value="user"> &#128100
          </label>
        </div>
        <input type="text" class="form-control" name="searchInput">
        <select class="custom-select" name="dishType">
          <option value="" selected>Select Dish Type</option>
          <option value="Mains">Mains</option>
          <option value="Breakfast">Breakfast</option>
          <option value="Snacks">Snacks</option>
          <option value="Dessert">Dessert</option>
          <option value="Drinks">Drinks</option>
        </select>
        <div class="btn-group">
          <button class="btn btn-outline-secondary" type="submit">Search</button>
        </div>
      </form>
    </div>

    <div>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent"
        aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarSupportedContent">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item">
            <a class="btn btn-outline-info" href="/recipe/create">Create Recipe</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-success" href="/auth/login">Login</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-success" href="/auth/signup">Signup</a>
          </li>
          <li class="nav-item">
            <a class="btn btn-outline-danger" href="/auth/logout">Logout</a>
          </li>

        </ul>
      </div>
    </div>
  </div>
